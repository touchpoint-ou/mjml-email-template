{
  "name": "mjml-starter",
  "version": "1.0.0",
  "description": "A starter project for MJML with live reload.",
  "scripts": {
    "build": "mjml index.mjml -o index.html",
    "watch": "chokidar index.mjml -c \"npm run build\"",
    "serve": "live-server --watch=index.html --port=3000 --quiet",
    "dev": "concurrently -k -n WATCH,SERVE -c yellow,cyan \"npm run watch\" \"npm run serve\""
  },
  "dependencies": {
    "mjml": "^4.13.0"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2"
  }
}
